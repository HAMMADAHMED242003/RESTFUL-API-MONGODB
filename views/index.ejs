<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quora Posts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid mt-5">
        <h1 style="color: brown;" class="mb-5 text">Quora Posts</h1>
        
        <!-- Posts Section -->
        <div id="postsContainer" class="row gy-4">
            <div class="col-lg-9">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped shadow-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Content</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let counter = 1; %>
                            <% for (let post of posts) { %>
                                <tr>
                                    <td><%= counter++ %></td>
                                    <td><%= post.username %></td>
                                    <td><%= post.content %></td>
                                    <td class="text-center">
                                        <a href="http://localhost:3000/posts/<%= post.id %>" class="btn btn-info btn-sm">Details</a>
                                        <a href="http://localhost:3000/posts/<%= post.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                        <form action="/posts/<%= post.id %>?_method=DELETE" method="post" class="d-inline">
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                    
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <!-- Create New Post Button -->
        <div class=" mt-2">
            <a href="http://localhost:3000/posts/new" class="btn btn-primary">Create New Post</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
